http://api.themindgame.me http://localhost {
    # Compress responses according to Accept-Encoding headers
    encode gzip zstd

    # Send API requests to backend
    reverse_proxy /api/* themindgame-node:8000
    
    # Send API requests to backend
    reverse_proxy /socket/* themindgame-node:3000 
    
    # Serve everything else from the file system
    file_server
}

