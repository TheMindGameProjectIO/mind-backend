    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "pm2:install": "npm i -g pm2",
        "pm2:stop": "npx pm2 stop themindgame",
        "pm2:save": "npx pm2 save",
        "pm2:start": "npx pm2 start npm --name \"themindgame\" -- run start:digital_ocean",
        "build": "npx tsc && npx tsc-alias",
        "test": "node ./index.js && echo \"Tests passed!\"",
        "start:digital_ocean": "NODE_ENV=production ENV_PATH=/home/cicd/apps/mind-backend/.env.prod node --es-module-specifier-resolution=node dist/index.js",
        "prod": "node --es-module-specifier-resolution=node dist/index.js",
        "dev:post": "npx tsc-alias && NODE_ENV=development ENV_PATH=.env.dev node --es-module-specifier-resolution=node --inspect dist/index.js",
        "dev": "npx tsc-watch --onSuccess \"npm run dev:post\"",
        "tunnel:rest": "~/ngrok http 8000 --region eu",
        "tunnel:socket": "~/ngrok http 3000 --region us",
        "tunnel": "npm run tunnel:rest & npm run tunnel:socket",
        "zver": "node zver.js"
    },
